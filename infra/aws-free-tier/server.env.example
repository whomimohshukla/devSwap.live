# Backend production environment example for AWS Free Tier deployment
# Copy this to server.env and fill in real values

# Core
NODE_ENV=production
PORT=5000
BACKEND_PUBLIC_URL=https://api.devswap.live
FRONTEND_URL=https://dev-swap-live.vercel.app
CORS_ORIGIN=https://dev-swap-live.vercel.app
CORS_CREDENTIALS=true

# Secrets
JWT_SECRET=replace-with-strong-secret
COOKIE_SECRET=replace-with-strong-secret

# Database
MONGODB_URI=replace-with-mongodb-atlas-uri

# Redis (optional)
DISABLE_REDIS=true
# If enabling Redis:
# DISABLE_REDIS=false
# REDIS_URL=redis://:password@host:6379

# AI Provider (choose one)
AI_PROVIDER=gemini
GEMINI_API_KEY=replace-with-gemini-key
GEMINI_MODEL=gemini-1.5-flash
# OR OpenRouter
# AI_PROVIDER=openrouter
# OPENROUTER_API_KEY=replace
# OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free
# OR OpenAI
# AI_PROVIDER=openai
# OPENAI_API_KEY=replace
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_MAX_TOKENS=2000
# OPENAI_TEMPERATURE=0.7

# OAuth (Google)
GOOGLE_CLIENT_ID=replace
GOOGLE_CLIENT_SECRET=replace
GOOGLE_REDIRECT_URI=https://api.devswap.live/api/auth/google/callback

# Feature flags / logging
ENABLE_AI_FEATURES=true
ENABLE_MATCHING=true
ENABLE_REQUEST_LOGGING=true
LOG_LEVEL=info

# Optional rate limiting (defaults are fine)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=1000
# STRICT_RATE_LIMIT_WINDOW_MS=300000
# STRICT_RATE_LIMIT_MAX=50
