{
	"name": "devswap-backend",
	"version": "1.0.0",
	"description": "DevSwap.live Backend - Skill-swapping platform API",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "nodemon --exec ts-node src/index.ts",
		"build": "tsc",
		"build:watch": "tsc --watch",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"docker:build": "docker build -t devswap-backend .",
		"docker:run": "docker run -p 5000:5000 devswap-backend",
		"docker:compose": "docker-compose up -d",
		"docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
		"health": "curl -f http://localhost:5000/api/health || exit 1"
	},
	"keywords": [
		"skill-swapping",
		"peer-learning",
		"webrtc",
		"ai",
		"education"
	],
	"author": "DevSwap.live Team",
	"license": "MIT",
	"dependencies": {
		"@types/cookie-parser": "^1.4.9",
		"bcrypt": "^6.0.0",
		"bullmq": "^5.58.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"express-rate-limit": "^8.0.1",
		"helmet": "^7.1.0",
		"ioredis": "^5.7.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.17.1",
		"mongoose-paginate-v2": "^1.9.1",
		"morgan": "^1.10.1",
		"openai": "^5.12.2",
		"redlock": "^5.0.0-beta.2",
		"socket.io": "^4.8.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/express-rate-limit": "^5.1.3",
		"@types/jest": "^29.5.8",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.2.1",
		"@types/supertest": "^6.0.2",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"eslint": "^8.54.0",
		"ioredis-mock": "^8.9.0",
		"jest": "^29.7.0",
		"mongodb-memory-server": "^9.1.3",
		"nodemon": "^3.0.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	}
}
