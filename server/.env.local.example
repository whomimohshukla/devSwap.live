# Local Development Environment
# Copy this to .env.local and update values

NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# For local development - disable Redis if having auth issues
DISABLE_REDIS=true

# OR configure local Redis with auth
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-local-redis-password

# MongoDB (local)
MONGODB_URI=mongodb://localhost:27017/devswap

# JWT (use weak secrets for local dev)
JWT_SECRET=local-dev-jwt-secret-not-for-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AI Configuration (optional for local dev)
OPENAI_API_KEY=your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here

# Other settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
