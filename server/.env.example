# DevSwap.live Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/devswap
MONGODB_TEST_URI=mongodb://localhost:27017/devswap_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
DISABLE_REDIS=false

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration
# If your key is project-scoped (starts with sk-proj-), set OPENAI_PROJECT.
# If you belong to multiple orgs, set OPENAI_ORG (or OPENAI_ORGANIZATION).
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG=
OPENAI_ORGANIZATION=
OPENAI_PROJECT=

# Model configuration (defaults are set in code to gpt-4o-mini)
OPENAI_MODEL_LESSON= 
OPENAI_MODEL_SUMMARY=

# Disable AI calls and always return fallbacks (useful in dev without billing)
AI_DISABLE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=5

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@devswap.live

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=your-sentry-dsn

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret
HELMET_ENABLED=true

# WebRTC Configuration
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_MATCHING=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# Performance
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# OAuth Providers
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:5000/api/auth/github/callback
